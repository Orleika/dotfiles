[user]
  name = Orleika
  email = orleika@users.noreply.github.com
[core]
  excludesfile = ~/.gitignore
  autoCRLF = false
  editor = vim -c 'set fileencoding=utf-8'
  filemode = false
[color]
  status = auto
  diff = auto
  branch = auto
  interactive = auto
  grep = auto
[push]
  default = simple
[alias]
  st = status
  sh = show
  ft = fetch
  rb = rebase
  rbm = rebase master
  rs = reset
  ad = add
  cm = commit
  ca = commit --amend
  co = checkout
  chp = cherry-pick
  br = branch
  ba = branch -a
  bm = branch --merged
  bn = branch --no-merged
  upidx = update-index --add
  l = log --one-line
  lg = log --stat --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  lga = log --graph --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
[pull]
  rebase = preserve
[merge]
  ff = false
[diff "office"]
  binary = true
  textconv = "~/bin/tika --text"
